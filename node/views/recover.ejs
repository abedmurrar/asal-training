<div class="recover-form-container">
    <form id="recoverForm" class="recover form" method="POST" action="/recover">
        <h2>Recover password</h2>
        <p>to Recover your password please enter the email you registered your account with.</p>
        <label for="email">Email</label>
        <div>
            <input type="text" name="email" id="email" placeholder="email" required>
            <p class="hint email-msg">Enter your email</p>
        </div>
        <input type="submit" id="edit" value="Edit">
    </form>
</div>
